<h2>Garden Name: <%= @garden.name %> 
<%= link_to "Add Plant", new_garden_plant_path(@garden) %>

<ul>
<% @garden.garden_plants.each do |gp| %>
<li><%= link_to gp.plant.name, garden_plant_path(gp) %>, Last Watered: <%= gp.updated_at %>
	<%= link_to 'Mulch Plant', garden_plant_path(gp),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
</li>
<% end %>
</ul>