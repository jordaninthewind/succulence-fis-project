<h3>Garden Name: <%= @garden.name %></h3>
<h4><%= link_to "Edit Garden", edit_garden_path(@garden) %></h4>

<ul>

<% @garden.garden_plants.reverse.each do |gp| %>
<li><%= link_to gp.plant.name, garden_plant_path(@garden, gp) %>, Last Watered: <%= gp.last_watered %>
 	- <%= link_to 'Mulch Plant', garden_plant_path(@garden, gp),
			method: :delete, data: { confirm: 'Are you sure?' } %>
</li><% end %>
</ul>

<h3>Add Plant from Selection:</h3>

<%= form_tag add_garden_plant_path(@garden), :method => :get do %>
<%= collection_select :name, :id, Plant.all, :id, :name %>
<%= submit_tag %>
<% end %>
<br>

<%= link_to "Make a New Plant", new_plant_path %>